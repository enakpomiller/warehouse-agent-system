    {{#each getall}} 
     <form class="" method="post" action="/agent/negotiate/{{_previousDataValues.id}}"> 
    <div class="row" style="margin-left:25%;">   
      <div class="col-md-4" style="">
        <img src="http://localhost:4500/{{_previousDataValues.path}}" style="width:100%;"><br>
      </div>
      <div class="col-md-4" style="">
          Product Name :   <input type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 text-center" readonly name="prod_name" value="{{_previousDataValues.prod_name}}"><br>
           Product Price  <input type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 text-center" readonly name="prod_price" value="&#8358;{{_previousDataValues.prod_price}}"><br>
           Product Brand <input type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 text-center" readonly name="prod_brand" value="{{_previousDataValues.prod_brand}}"><br>
        <input type="number"  class="pt-2 pb-2 mt-2 mb-2 text-center" style="width:100%;" required name="cust_price" placeholder=" Enter Your Price"><br>
        <input type="text" name="token" placeholder=" Enter Token" class="form-control pt-2 pb-2 mt-2 mb-2 text-center" required> 
        <input type="hidden" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 text-center" readonly name="path" value="{{_previousDataValues.path}}"><br>
        <button style="background:#ef233c;padding:10px;width:100%;border-radius:5px;border:0px solid red;color:white;font-weight:bold;">Send to Agent</button>
      </div> 
    </div>
    </form>
    {{/each}}
