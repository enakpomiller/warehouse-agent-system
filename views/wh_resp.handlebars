  <tbody>
    {{#each getwarehouse}}
    <tr>
      <td><img src="http://localhost:4500/{{_previousDataValues.path}}" style="width:20%;"><br></td>
      <form class="row g-3 needs-validation" method="post" action="/agent/to_customer"> 
      <input type="hidden" name="prod_id" value="{{_previousDataValues.prod_id}}">
      <td><input type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 " readonly name="prod_name" value="{{_previousDataValues.prod_name}}"></td>
      <td><input type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 " readonly name="prod_price" value="{{_previousDataValues.prod_price}}"></td>
      <td><input type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 " readonly name="prod_brand" value="{{_previousDataValues.prod_brand}}"></td>
      <td> <input type="text"  type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 text-center"  readonly required name="cust_price" value="{{_previousDataValues.cust_price}}"></td>
      <td><input type="text" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 " readonly name="decision" value="{{_previousDataValues.accept}}"></td>
      <td><input type="hidden" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 " readonly name="token" value="{{_previousDataValues.token}}"></td>
      <td><input type="hidden" style="border:0px solid red;" class="pt-2 pb-2 mt-2 mb-2 " readonly name="path" value="{{_previousDataValues.path}}"></td>
      <td>
        <button style="background:#000000;padding:10px;width:100%;border-radius:5px;border:0px solid red;color:#ef233c;font-weight:bold;" onclick="return confirm(' Do you wish to send a Message to Ware house for price negotiations? ')"> Send to customer </button>
      </td>
      </form>
    </tr>
     {{/each}}

  </tbody>
</table>
